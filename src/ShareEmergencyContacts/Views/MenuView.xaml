<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ShareEmergencyContacts.Views.MenuView">
    <ContentPage.Resources>
        <ResourceDictionary>
            <Style x:Key="MenuButton" TargetType="Button">
                <Setter Property="BackgroundColor" Value="Transparent" />
                <Setter Property="BorderColor" Value="Transparent" />
                <Setter Property="BorderWidth" Value="0" />
                <Setter Property="FontSize" Value="20" />
            </Style>
        </ResourceDictionary>
    </ContentPage.Resources>
    <StackLayout>
        <Button BorderWidth="0" Margin="10" Text="My profiles" Style="{StaticResource MenuButton}" Command="{Binding ProfilesCommand}" />
        <Button BorderWidth="0" Margin="10" Text="About" Style="{StaticResource MenuButton}" Command="{Binding AboutCommand}" />
        <!--<Button BorderWidth="0" Margin="10" Text="Settings" Style="{StaticResource MenuButton}" Command="{Binding SettingsCommand}" />-->
    </StackLayout>
</ContentPage>