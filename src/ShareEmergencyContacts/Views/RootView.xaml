<MasterDetailPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:views="clr-namespace:ShareEmergencyContacts.Views"
             xmlns:viewModels="clr-namespace:ShareEmergencyContacts.ViewModels;assembly=ShareEmergencyContacts"
             x:Class="ShareEmergencyContacts.Views.RootView"
             MasterBehavior="Popover" IsPresented="{Binding MenuIsPresented, Mode=TwoWay}">
    <MasterDetailPage.BindingContext>
        <viewModels:RootViewModel />
    </MasterDetailPage.BindingContext>
    <MasterDetailPage.Master>
        <views:MenuView Title="Menu" BindingContext="{Binding MenuViewModel}" />
    </MasterDetailPage.Master>
</MasterDetailPage>